<div class="page-header">
  <h1>Image Statistics </h1>
</div>


<div id="container">
	 
  <canvas id="chart" width="600" height="500"></canvas>

  <table id="chartData">
	  <tr>
	   <th>Category</th>
	   <th>Views</th>
	  </tr>
	  
  		<% i = 0%>
  		
	  	<% @categories.each do |category|%>
	  
	  		<tr style="color:<%= COLOR[i]%> ">	  		
	    		<td><%= category.title%></td>
	    		<td><%= category.images.count%></td>	    	
	  		</tr>
	  	
	  		<% i = i + 1%>
	  	
	  	<% end%>
	  	
  </table>

</div>
